<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aleclownes.manageo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.aleclownes.manageo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aleclownes.manageo.TileInteractActivity"
            android:label="@string/title_activity_interact"
            android:parentActivityName="com.aleclownes.manageo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aleclownes.manageo.MainActivity" />
        </activity>
        <activity
            android:name="com.aleclownes.manageo.BuildActivity"
            android:label="@string/title_activity_build"
            android:parentActivityName="com.aleclownes.manageo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aleclownes.manageo.MainActivity" />
        </activity>
        <activity
            android:name="com.aleclownes.manageo.InventoryActivity"
            android:label="@string/title_activity_inventory" >
        </activity>
        <activity
            android:name="com.aleclownes.manageo.CitizenActivity"
            android:label="@string/title_activity_citizen" >
        </activity>
        <activity
            android:name="com.aleclownes.manageo.HireActivity"
            android:label="@string/title_activity_hire" >
        </activity>
    </application>

</manifest>
